      }]
    }
  });

/= line_chart @pcrGraph.pluck(:date, :positive).to_h
/= line_chart @pcrGraph.map { |pcr| {name: pcr.date, date: pcr.positive}}
/= line_chart @pcrGraph.order(:date).group_by_day(:date).sum(:positive)
= line_chart @pcrGraph.order(:date).group_by_day(:created_at).count(:positive)
