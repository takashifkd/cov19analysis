  var ctx = document.getElementById("myChart");
  var myChart = new Chart(ctx, {
    type: 'radar',
    data: {
      labels: ["Japanese", "Mathematics", "English", "Social studies", "Science"],
      datasets: [{
        label: 'A_kun',
        backgroundColor: "rgba(0,0,80,0.4)",
